<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/handler_dialog"
    android:layout_width="350dp"
    android:layout_height="475dp"
    android:layout_gravity="center"
    android:padding="20dp"
    android:background="@drawable/round"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/lottieAnim1"
        android:layout_width="250dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:src="@drawable/fileimg"
        android:layout_marginTop="50dp"
   >


    </ImageView>


    <TextView
        android:id="@+id/dialogFileName"
        android:maxLines="1"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Failas"
        android:fontFamily="@font/roboto_bold"
        android:textColor="#E8000000"
        android:textSize="16dp"
        ></TextView>

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Pasirinkite veiksmus"
        android:fontFamily="@font/roboto_medium"
        android:textColor="#515151"
        android:textSize="13dp"
        ></TextView>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/decryptButton"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:minWidth="180dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Atsifruoti"
        app:icon="@drawable/ic_baseline_vpn_key_24"
        android:background="@drawable/round"
        app:backgroundTint="#97FFC9"
        />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/deleteFileButton"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
       android:minWidth="180dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Istrinti"
        app:icon="@drawable/ic_baseline_delete_forever_24"
        android:background="@drawable/round"
        app:backgroundTint="#FF97A3"
         />


</LinearLayout>